\newenvironment{dfa}{
    \gdef\accepting{}
    \gdef\transitions{}
    \gdef\states{}
    \begin{tikzpicture}[
        shorten >=1pt,
        >={Stealth[round]},
        very thick,
        node distance=3cm,
        on grid,
        auto,
        every state/.style={ultra thick},
        accepting/.style ={draw=green!50!black, ultra thick, fill=green!80!black, text=black},
        F/.style = {draw, fill=white, 
                           inner sep=0pt, outer sep=0pt,
                          },
        remember picture,
        ]
}{
    \end{tikzpicture}
}

\newcommand{\start}[3]{
    \gdef\starting{#3}
    \listgadd\states{#3}
    \node (#1) [
        state,
        initial #2,
        initial text = {},
        initial distance = 1cm
    ] {#3};
}

\newcommand{\accept}[3]{
    \listgadd\accepting{#3}
    \listgadd\states{#3}
    \node (#1) [
        state, 
        accepting,
        #2
    ] {\textbf{#3}};
}

\newcommand{\state}[3]{
    \listgadd\states{#3}
    \node (#1) [
        state, 
        #2
    ] {#3};
}

\newcommand{\trans}[5] {
    \gdef\toadd{$\delta$($#1$, \{$#4$\}) = $#5$}
    \listgadd\transitions{$\delta$($#1$, \{$#4$\}) = $#5$}
    \path[-{Stealth[open, round, color=black]}, very thick]
    (#1) edge [#2] node[#3] {#4} (#5);
}

\newcommand{\ltrans}[4] {
    \gdef\toadd{$\delta$($#1$, \{$#4$\}) = $#1$}
    \listgadd\transitions{$\delta$($#1$, \{$#4$\}) = $#1$}
    \path[-{Stealth[open, round, color=black]}, very thick]
    (#1) edge [reflexive #2] node[#3] {#4} (#1);
}

